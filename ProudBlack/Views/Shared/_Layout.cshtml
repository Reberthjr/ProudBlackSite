<!DOCTYPE html>
<html lang="en" style="background-color:#212529;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProudBlack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProudBlack.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
               @*
                   colocar logo
               <img src=""/>//*@
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProudBlack</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-ligth" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>                        
                        <li class="nav-item"><a class="nav-link text-ligth" asp-area="" asp-controller="Produto" asp-action="List">Produtos</a> </li>
                        <li class="nav-item"><a class="nav-link text-ligth" asp-area="" asp-controller="Contato" asp-action="Index">Contato</a> </li>
                        <form class="navbar-form navbar-right" asp-controller="Produto" asp-action="Search" method="get">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Procurar produto" name="searchString" value="@ViewData["searchString"]">
                            </div>
                        </form>
                    </ul>
                    
                </div>
                @if (User.IsInRole("Admin"))
                {
                 
                }
                else
                {
                  @await Component.InvokeAsync("CarrinhoCompraResumo")   
                }
                
                @if (User.IsInRole("Admin"))
                {
                 <img src="~/img/Admin/painel-adm.png"/>
                 <a class="nav-link text-light" asp-area="Admin" asp-controller="Admin" asp-action="Index">Painel de administrador</a>
                }
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </nav>
    </header>
    <div class="container">
        <main style="flex-grow: 1" role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>>

     <partial name="_Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
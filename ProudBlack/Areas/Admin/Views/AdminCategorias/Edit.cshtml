@model ProudBlack.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaId" />
            <div class="form-group">
                <label asp-for="CategoriaName" class="control-label"></label>
                <input asp-for="CategoriaName" class="form-control" />
                <span asp-validation-for="CategoriaName" class="text-danger"></span>
           <div class="form-group">
        <label asp-for="Descricao" class="control-label"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
            <div class="form-group" style="margin-top:15px">
                <input type="submit" value="Salvar" class="btn btn-outline-success" /> |
                <a class="btn btn-outline-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>
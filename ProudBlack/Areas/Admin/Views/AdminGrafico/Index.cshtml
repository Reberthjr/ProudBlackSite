<title>
    @ViewData["Title"] - Gráfico de Vendas
</title>

<script src="https://www.gstatic.com/charts/loader.js"></script>

<div id="chart_div" style="width:900px; height:500px;"></div>

<script type="text/javascript">
    google.charts.load('current', { packages: ['corechart'] });
    google.charts.setOnLoadCallback(CarregarDados);

    function CarregarDados(){
        $.ajax({
            url:'@Url.Action("VendasProdutos","AdminGrafico")',
            data: {dias : 360},
            dataType:"json",
            type:"GET",
            error: function (xhr, status, error){
                var err = eval("("+ xhr.responseText + ")");
                toastr.error(err.message);
            },
            success: function(data){
                GraficoVendasProdutos(data)
                return false;
            }
        });
        function GraficoVendasProdutos(data) {
            var dataArray=[
                ['Produto','Quantidade','Valores(R$)']
            ];
            $.each(data, function (i, item){
                dataArray.push([item.produtosNome, item.produtosQuantidade, item.produtosValorTotal])
            });
            var data = google.visualization.arrayToDataTable(dataArray
            );
            var options ={
                title: 'Produtos - Venda de produtos nos últimos 360 dias'
                chatArea:{
                    width:'70%'
                },
                colors: ['#5202b5','#d2a828'],
                hAxis:{
                    title:'Valor total (em Reais)',
                    minValue: 0
                },
                vAxis:{
                    title: 'Produtos'
                }
            };

           var chart = new google.visualization.BarChart(document.getElementById('chart_div'));
           chart.draw(data,options);
           return false;
        }
    }
</script>